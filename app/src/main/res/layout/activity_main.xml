<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.yjzfirst.com.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_topbar_height"
        android:background="@color/transport_int"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_topbar_height"
            android:background="@mipmap/mainview"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/activity_bar_title" />
        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/include_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_button_height"
        android:layout_marginRight="@dimen/button_margin_left"
        android:layout_marginLeft="@dimen/button_margin_left"
        android:orientation="vertical" >

            <!--android:background="#f3f7f6"-->

            <!--android:orientation="horizontal">-->
        <LinearLayout
        android:id="@+id/entry_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/fab_margin"
        android:background="@color/colorbarbackground"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="onClick" >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:background="@mipmap/entry"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/fab_margin"
            android:text="@string/entry"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/activity_bar_title" >

        </TextView>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/delivery_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/fab_margin"
            android:clickable="true"
            android:onClick="onClick"
            android:background="@color/colorbarbackground">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:background="@mipmap/delivery"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/fab_margin"
                android:text="@string/delivery"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/activity_bar_title" >


            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Check_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/fab_margin"
            android:clickable="true"
            android:onClick="onClick"
            android:background="@color/colorbarbackground" >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:background="@mipmap/check"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/fab_margin"
                android:text="@string/check_main"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/activity_bar_title">



            </TextView>
        </LinearLayout>



</LinearLayout>
</LinearLayout>
